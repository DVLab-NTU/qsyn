#! /usr/bin/env bash

# cd to the directory of this script
cd "$(dirname "$0")" || exit

compiler="$1"
if [ -z "$1" ]; then
    compiler="gcc"
fi


if [ "$compiler" = "clang" ]; then
    docker build -t qsyn-test-clang -f docker/clang-test.Dockerfile .
    docker run --rm --security-opt seccomp=unconfined -v "$(pwd)":/app/qsyn qsyn-test-clang "$@"
elif [ "$compiler" = "gcc" ]; then
    docker build -t qsyn-test-gcc -f docker/gcc-test.Dockerfile .
    docker run --rm --security-opt seccomp=unconfined -v "$(pwd)":/app/qsyn qsyn-test-gcc "$@"
fi
